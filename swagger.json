{
"swagger": "2.0",
"info": {
"version": "1.0.0",
"title": "Mini Project 3",
"description": "My Project Application API",
"license": {
"name": "MIT",
"url": "https://opensource.org/licenses/MIT"
}
},
"host": "localhost:8081",
"basePath": "/api",
"tags": [
{
"name": "Fashion-DB",
"description": "API for a fashion database"
}
],
"schemes": ["http"],
"consumes": ["application/json"],
"produces": ["application/json"],
"paths": {
"/users/all-orders/{id}": {
"get": {
"tags": [
"Fashion-DB"
],
"summary": "get orders for a user",
"operationId": "getUserOrders",
"parameters": [
{
 "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "The ID of the user whose orders you want to retrieve (currently only have 13 and 14 seeded)"
}
],
   "responses": {
          "200": {
            "description": "A list of orders for the specified user",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "orderId": {
                    "type": "integer",
                    "example": 101
                  },
                  "totalAmount": {
                    "type": "number",
                    "example": 150.75
                  },
                  "orderDate": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2024-12-01T10:00:00Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
     "/users/create": {
    "post": {
      "tags": [
        "Fashion-DB"
      ],
      "summary": "Create a new user",
      "operationId": "createUser",
      "parameters": [
        {
          "name": "body",
          "in": "body",
          "required": true,
          "description": "User object that needs to be added to the database",
          "schema": {
            "type": "object",
            "properties": {
              "firstName": {
                "type": "string",
                "example": "Jane"
              },
              "lastName": {
                "type": "string",
                "example": "Doe"
              },
              "email":{
                "type":"string",
                "example":"someEmail@email.com"
              },
              "password": {
                "type": "string",
                "example": "securepassword123"
              },
              "phone":{
                "type":"string",
                "example":"0412345678"
              },
              "address":{
                "type":"string",
                "example":"123 John lane, Johnville, 1111"
              }
            }
          }
        }
      ],
      "responses": {
        "201": {
          "description": "User successfully created",
          "schema": {
            "type": "object",
            "properties": {
              "userId": {
                "type": "integer",
                "example": 15
              },
              "username": {
                "type": "string",
                "example": "fashionista123"
              }
            }
          }
        },
        "400": {
          "description": "Invalid input"
        },
        "500": {
          "description": "Internal server error"
        }
      }
    }
  }

     
  }

  
}
